
<MudPaper Class="ma-2 pa-2" Style="@($"color: {Colors.Grey.Lighten4}; background-color: #505050;")">
    <div class="d-flex flex-row align-center">
        <MudText>
            <b>@Pizza.Size" @Pizza.Special.Name</b>
        </MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Close" Style="@($"color: {Colors.Grey.Lighten4};")"
                       @onclick="@(()=>RemoveConfiguredPizza(Pizza))"></MudIconButton>
    </div>
    @foreach (var topping in Pizza.Toppings)
    {
        <MudText Class="ml-3">+ @topping.Topping.Name</MudText>
    }
    <MudText Typo="Typo.h6"><b>$ @Pizza.GetFormattedTotalPrice()</b></MudText>
</MudPaper>


@code {
    [Parameter] public Pizza Pizza { get; set; }
    [Parameter] public EventCallback<Pizza> OnRemoveConfiguredPizza { get; set; }

    private void RemoveConfiguredPizza(Pizza pizza)
    {
        OnRemoveConfiguredPizza.InvokeAsync(pizza);
    }
}
